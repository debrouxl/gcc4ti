[Main]
Name=SCR_STATE
Type=Type
Subtype=Structure
Header Files=dialogs.h, estack.h, events.h, graph.h, statline.h, textedit.h, wingraph.h, unknown.h
Definition=typedef struct { void *ScrAddr; unsigned char XMax, YMax; short CurFont, CurAttr, CurX, CurY; SCR_RECT CurClip; } SCR_STATE;
